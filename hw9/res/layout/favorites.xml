<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/keywordmention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a keyword:"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="1dp" />

    <Button
        android:id="@+id/clearbtn"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:text="CLEAR"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/searchbtn"
        android:layout_alignBottom="@+id/searchbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/searchbtn"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:text="SEARCH"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:onClick="favoriteclick"
        android:layout_below="@+id/keywordtxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <AutoCompleteTextView
        android:id="@+id/keywordtxt"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/keywordmention"
        android:layout_marginTop="15dp"
        android:textColorLink="@android:color/darker_gray" />
</RelativeLayout>


