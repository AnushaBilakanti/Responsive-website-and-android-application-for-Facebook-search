<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_in_list"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"/>


    <ImageButton
        android:id="@+id/next_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"
        android:background="@mipmap/detailsimg"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/star_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/next_image"
        android:layout_centerVertical="true"
        android:background="@mipmap/favorites_off"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/image_in_list"
        android:layout_toLeftOf="@id/star_button"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:gravity="center"
        android:textStyle="bold"/>


</RelativeLayout>