<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_in_list1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"/>


    <ImageButton
        android:id="@+id/next_image1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"
        android:background="@mipmap/detailsimg"/>

    <ImageButton
        android:id="@+id/star_button1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/favorites_on"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/next_image1"
        android:layout_toLeftOf="@+id/next_image1"
        android:layout_toStartOf="@+id/next_image1" />

    <TextView
        android:id="@+id/text_list_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/image_in_list1"
        android:layout_toLeftOf="@id/star_button1"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>


</RelativeLayout>