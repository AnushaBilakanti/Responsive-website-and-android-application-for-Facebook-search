<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anush.hw9.AboutMeActivity">

    <TextView
        android:id="@+id/keywordmention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a keyword:"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/clearbtn"
        android:layout_width="186dp"
        android:layout_height="47dp"
        android:layout_marginLeft="1dp"
        android:text="CLEAR"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/keywordtxt" />

    <Button
        android:id="@+id/searchbtn"
        android:layout_width="186dp"
        android:layout_height="47dp"
        android:text="SEARCH"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/clearbtn"
        android:onClick="Search"
        app:layout_constraintTop_toBottomOf="@+id/keywordtxt" />

    <AutoCompleteTextView
        android:id="@+id/keywordtxt"
        android:layout_width="383dp"
        android:layout_height="54dp"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/keywordmention"
        android:layout_marginLeft="1dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
